<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - COMEX - A.G.A.</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/css/index.css" rel="stylesheet" />
</head>
<body>
    <header class="header d-flex justify-content-between align-items-center box-shadow-black bg-light-green border-bottom border-white">
        <figure>
            <img class="header-logo" src="~/Medias/images/png/Migiva.png" />
        </figure>
        <div>
            <h1 class="title text-light text-center text-shadow-black">Agricola Andrea S.A.C.</h1>
        </div>
        <figure>
            <img class="header-logo" src="~/Medias/images/png/Agricola-Andrea.png" />
        </figure>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark-green border-bottom border-white">
        <a class="navbar-brand text-white text-shadow-black" href="#" id="index">Sistema COMEX</a>
        <button class="navbar-toggler text-white" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon text-white"></span>
        </button>
        <div id="navbarNavDropdown" class="navbar-collapse collapse">
            <ul class="navbar-nav mr-auto ">
                <li class="nav-item nav-hover">
                    <a class="nav-link text-white text-shadow-black" href="#">Gerencia Tecnología de la Información</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item nav-hover">
                    <a class="nav-link text-white text-shadow-black" href="#" id="control-calidad">Control de Calidad</a>
                </li>
                <li class="nav-item nav-hover">
                    <a class="nav-link text-white text-shadow-black" href="#">Proyección Comercial</a>
                </li>
                <li class="nav-item nav-hover">
                    <a class="nav-link text-white text-shadow-black" data-toggle="modal" data-target="#loginModal">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white text-shadow-black">@@gfcarbonell</a>
                </li>
            </ul>
        </div>
    </nav>
    <section class="section">
        @RenderBody()
        <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModal" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="text-center">Iniciar Sesión</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    </div>
                    <div class="modal-body">
                        <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
                            <div class="form-group">
                                <a href="" class="float-right">New user?</a>
                                <label for="uname1">Nombre de Usuario</label>
                                <input type="text" class="form-control form-control" name="uname1" id="uname1" required="">
                                <div class="invalid-feedback">Oops, you missed this one.</div>
                            </div>
                            <div class="form-group">
                                <label>Contraseña</label>
                                <input type="password" class="form-control form-control" id="pwd1" required="" autocomplete="new-password">
                                <div class="invalid-feedback">Enter your password too!</div>
                            </div>
                            <div class="form-group py-4">
                                <button class="btn btn-outline-danger btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                                <button type="submit" class="btn btn-success btn float-right" id="btnLogin">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer id="footer" class="border-top border-white bg-dark-green">
        <p class="text-center" id="copyright"><span class="font-weight-bold text-warning text-shadow-black">&copy; Todos los derechos reservados:</span> <span class="font-weight-bold text-white text-shadow-black">Agrícola Andrea S.A.C. - @DateTime.Now.Year</span> </p>
    </footer>
    @Html.Hidden("RedirectToIndex", Url.Action("Index", "Home"))
    @Html.Hidden("RedirectToControlCalidad", Url.Action("ControlCalidad", "Home"))

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script src="~/Scripts/axios.min.js"></script>

    <script type="text/javascript">
        $(document).ready(($) => {
            $(`#index`).click(e => {
                e.preventDefault();
                let url = $("#RedirectToIndex").val(); location.href = url;
            })

            $(`#control-calidad`).click(e => {
                e.preventDefault();
                let url = $("#RedirectToControlCalidad").val(); location.href = url;
            })

        })
    </script>
    @RenderSection("scripts", required: false)
</body>

</html>
